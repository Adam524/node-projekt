doctype html
mixin item(title,url)
  li 
    a(href=url class= url==path? 'active': "")=title
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
  
  ul 
    +item("Strona główna", '/')
    +item("News", '/news')
    +item("Quiz", '/quiz')
    +item("Strona admina", '/admin')
    block content
